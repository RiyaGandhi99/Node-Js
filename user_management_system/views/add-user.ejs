<%- include("includes/_header") %>


<main class="user-form">
    <div class="new-user">
        <a href="/">
            <span class="all-user">All User</span>
            <span class="arrow-icon">&#8592;</span>
        </a>
    </div>

    <div class="container-form">
        <h3 class="form-title">New User</h3>
        <p class="form-description">Use this form to add a new user.</p>

        <form action="/api/user" method="post" id="add_user_form">
            <div>
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label>Gender:</label>
                <input type="radio" id="male" name="gender" value="male" required>
                <label for="male">Male</label>
                <input type="radio" id="female" name="gender" value="female" required>
                <label for="female">Female</label>
            </div>
            <div>
                <label>Status:</label>
                <input type="radio" id="active" name="status" value="active" required>
                <label for="active">Active</label>
                <input type="radio" id="inactive" name="status" value="inActive" required>
                <label for="inactive">Inactive</label>
            </div>
            <button type="submit" class="submit-btn">Submit</button>
        </form>
    </div>
</main>


<%- include("includes/_footer") %>